<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="snippet_custom" name="custom snippet">
        <section class="snippet_custom">
            <div class="container">
                <h3 class="text-center mb32">viewed Products</h3>
                <div class="slider o_not_editable" style="display: none;"/> <!-- TODO master: remove deprecated inline style -->
            </div>
        </section>
    </template>

    <template id="snippet_custom_options" inherit_id="website.snippet_options" name="e-commerce snippet options custom">
        <xpath expr="." position="inside">
            <div data-js="WebsiteSaleProductsItem"
            data-selector=".snippet_custom .oe_product"
            data-no-check="true">
            <we-collapse-area>
                <we-toggler>Size</we-toggler>
                <we-collapse class="o_wsale_soptions_menu_sizes">
                    <table>
                        <tr>
                            <td/><td/><td/><td/>
                        </tr>
                        <tr>
                            <td/><td/><td/><td/>
                        </tr>
                        <tr>
                            <td/><td/><td/><td/>
                        </tr>
                        <tr>
                            <td/><td/><td/><td/>
                        </tr>
                    </table>
                </we-collapse>
            </we-collapse-area>
            <we-collapse-area>
                <we-toggler>Styles</we-toggler>
                <we-collapse data-no-preview="true" name="style"/>
            </we-collapse-area>
            <we-collapse-area>
                <we-toggler>Promote</we-toggler>
                <we-collapse data-no-preview="true">
                    <we-button data-change-sequence="top">Push to top</we-button>
                    <we-button data-change-sequence="up">Push up</we-button>
                    <we-button data-change-sequence="down">Push down</we-button>
                    <we-button data-change-sequence="bottom">Push to bottom</we-button>
                </we-collapse>
            </we-collapse-area>
        </div>
        </xpath>
    </template>
    <template id="snippets_product" inherit_id="website.snippets" name="e-commerce snippets product">
        <xpath expr="//div[@id='snippet_structure']//t[@t-snippet][last()]" position="after">
            <t t-snippet="custom_website.snippet_custom" t-thumbnail="/custom_website/static/src/img/ui/navi.jpg"/>
        </xpath>
    </template>
</odoo>